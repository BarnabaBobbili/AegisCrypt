# ==============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ==============================================================================

# Application Settings
APP_NAME="Adaptive Crypto Policy Engine"
APP_VERSION="1.0.0"
DEBUG=False

# Database
DATABASE_URL=sqlite:///./adaptive_crypto.db

# Security - JWT
# IMPORTANT: Generate a strong secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=change-this-to-a-secure-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_ROUNDS=12
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=True
REQUIRE_LOWERCASE=True
REQUIRE_DIGITS=True
REQUIRE_SPECIAL_CHARS=True

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW_MINUTES=15

# Risk Scoring
RISK_LOW_THRESHOLD=30
RISK_MEDIUM_THRESHOLD=60
RISK_HIGH_THRESHOLD=61

# MFA Settings
MFA_REQUIRED_RISK_SCORE=61
MFA_RECOMMENDED_RISK_SCORE=31

# Cryptography
AES_KEY_SIZE=256
RSA_KEY_SIZE=2048
DEFAULT_HASH_ALGORITHM=SHA-256

# ML Model
ML_MODEL_PATH=./ml_models/distilbert
ML_CONFIDENCE_THRESHOLD=0.85

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Business Hours (for risk calculation)
BUSINESS_START_HOUR=9
BUSINESS_END_HOUR=18

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
